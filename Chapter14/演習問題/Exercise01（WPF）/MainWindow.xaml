<Window x:Class="Exercise01_WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="894">
    <Grid>
        <!-- 読み込み -->
        <Button Content="loading" HorizontalAlignment="Center" VerticalAlignment="Top" Height="52" Width="831" FontSize="30" FontWeight="DemiBold" Click="LoadingButton_Click" Margin="0,10,0,0"/>

        <!-- 表示する -->
        <ListView x:Name="textListView" Margin="10,80,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="テキスト一覧"  DisplayMemberBinding="{Binding}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Label x:Name="label1" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="20" Margin="0,0,0,20"/>


    </Grid>
</Window>
