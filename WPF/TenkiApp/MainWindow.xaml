<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenkiApp"
        mc:Ignorable="d"
        Title="TenkiApp" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF1E88E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="33"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF42A5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,-144">

        <Grid.Background>
            <ImageBrush ImageSource="splash_00192.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20,20,2,20" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.184"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.497"/>
                </TransformGroup>
            </StackPanel.RenderTransform>

            <TextBlock Text="県名で検索" 
                FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="PrefectureInput" 
                    Grid.Column="0"
                    Text="東京" 
                    Padding="5" 
                    Margin="0,0,5,0" 
                    Height="33" 
                    FontSize="16"/>

                <Button x:Name="SearchButton" 
                 Grid.Column="1"
                 Content="検索" 
                 Click="SearchButton_Click" 
                 Style="{StaticResource SearchButtonStyle}"/>
            </Grid>

            <TextBlock Text="緯度・経度を入力" 
                FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <Label Content="緯度:" FontWeight="Bold"/>
            <TextBox x:Name="LatitudeInput" Text="35.6895" Padding="5" Margin="0,0,0,10" TextChanged="Ido_TextChanged" Height="33"/>

            <Label Content="経度 :" FontWeight="Bold"/>
            <TextBox x:Name="LongitudeInput" Text="139.6917" Padding="5" Margin="0,0,0,20" TextChanged="Keido_TextChanged"/>

            <Border BorderBrush="#FFA0A0A0" BorderThickness="1" Padding="15" CornerRadius="5" Width="331">
                <StackPanel>
                    <TextBlock Text="現在の天気情報" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Width="246" RenderTransformOrigin="0.128,0.459"/>
                    <TextBlock x:Name="LocationTextBlock" Text="場所: --" FontSize="30" FontWeight="SemiBold" Foreground="Bisque" Margin="0,0,0,5" Width="304"/>
                    <TextBlock x:Name="TimeTextBlock" Text="取得時刻: --" FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TemperatureTextBlock" Text="気温: -- °C" FontSize="30" FontWeight="ExtraBold" Foreground="Bisque" Margin="0,0,0,10" Width="304"/>
                    <TextBlock x:Name="WindSpeedTextBlock" Text="風速: -- m/s" FontSize="16"/>
                    <TextBlock x:Name="HumidityTextBlock" Text="湿度: -- %" FontSize="16"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <DockPanel Grid.Column="1" Margin="20,20,20,277">

            <TextBlock DockPanel.Dock="Top" Text="週間予報 " 
                               FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListView x:Name="ForecastListView" DockPanel.Dock="Top" Height="259" SelectionChanged="ForecastListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="日付" DisplayMemberBinding="{Binding Date}" Width="90"/>
                        <GridViewColumn Header="天気記号" DisplayMemberBinding="{Binding WeatherCode}" Width="120"/>
                        <GridViewColumn Header="最高気温" DisplayMemberBinding="{Binding MaxTemperature}" Width="100"/>
                        <GridViewColumn Header="最低気温" DisplayMemberBinding="{Binding MinTemperature}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,20,0,0"/>

        </DockPanel>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Visibility="Collapsed"/>
        <Button Grid.Column="1" Content="update" HorizontalAlignment="Left" Margin="317,321,0,0" VerticalAlignment="Top" Width="113" Height="225" FontSize="31" FontWeight="Heavy" Click="UpdateButton_Click"/>

