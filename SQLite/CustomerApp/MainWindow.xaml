<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="顧客管理アプリケーション" Height="800" Width="800">

    <Grid>
  
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
       
            <RowDefinition Height="2*"/>
          
        </Grid.RowDefinitions>

  
        <Grid Grid.Row="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 名前 -->
            <TextBlock Text="名前" FontSize="25" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="NameText" Margin="5"/>

            <!-- 電話番号 -->
            <TextBlock Grid.Row="1" Text="電話番号" FontSize="25" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="CallNumberText" Margin="5"/>

            <!-- 住所 -->
            <TextBlock Grid.Row="2" Text="住所" FontSize="25" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="AddressText" Margin="5"/>

            <!-- 画像 -->
            <TextBlock Grid.Row="3" Text="画像" FontSize="25" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                <Button Content="選択" Click="PhotoButton_Click" Margin="0,0,10,0" Width="72"/>
                <Image x:Name="ImageBox" Width="233" Height="190"/>
            </StackPanel>

            <!-- ボタン -->
            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="保存" Width="226" Margin="5" Click="SaveButton_Click"/>
                <Button Content="更新" Width="227" Margin="5" Click="UpDateButton_Click" Height="43"/>
                <Button Content="削除" Width="225" Click="DeleteButton_Click" Height="37"/>
            </StackPanel>

            <!-- 検索 -->
            <TextBox Grid.Row="5" Grid.ColumnSpan="5" x:Name="SerchTextBox" Margin="5,5,5,-72"
                     TextChanged="SerchTextBox_TextChanged"
                     GotFocus="SerchTextBox_GotFocus" LostFocus="SerchTextBox_LostFocus"
                     Text="名前で検索"/>
        </Grid>

     
        <ListView Grid.Row="1" x:Name="CustomerListView" Margin="10" 
                  SelectionChanged="CustomerListView_SelectionChanged" Background="WhiteSmoke">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5">
                        <StackPanel Width="200">
                            <TextBlock Text="{Binding Name}" FontSize="18"/>
                            <TextBlock Text="{Binding Phone}" FontSize="16" Foreground="Black"/>
                            <TextBlock Text="{Binding Address}" FontSize="16" Foreground="DarkRed"/>
                        </StackPanel>
                        <Image Source="{Binding PictureImage}" Width="80" Height="80" Stretch="UniformToFill" Margin="10,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>