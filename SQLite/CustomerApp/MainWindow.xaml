<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="顧客管理アプリケーション" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" >
            <TextBox x:Name="NameTextBox" Width="182"  Margin="60,0,10,0" />
            <TextBox x:Name="PhoneTextBox" Width="195"  Margin="100,0,10,0" />
            <TextBox x:Name="AddressTextBox" Width="139" Margin="70,0,10,0"  />
            <Image x:Name="picture" AllowDrop="False" Width="115" Height="24"    />

        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,390,10">
            <Button Content="更新" x:Name="UpdateButton" Width="100" Margin="0,0,10,0" Click="UpdateButton_Click" FontSize="20"/>
            <Button Content="保存" x:Name="SaveButton" Width="100" Margin="30,0,40,0" Click="SaveButton_Click" FontSize="20"/>
            <Button Content="消去" x:Name="DeleteButton" Width="109" Click="DeleteButton_Click" FontSize="20"/>
        </StackPanel>

        <!-- 検索ボックス -->
        <TextBox x:Name="SearchTextBox" Grid.Row="2" FontSize="16" Margin="0,0,390,223"
                 TextChanged="SearchTextBox_TextChanged" Grid.RowSpan="2" />

        <!-- 顧客一覧表示 -->
        <ListView x:Name="PersonListView" Grid.Row="3" SelectionChanged="PersonListView_SelectionChanged" Margin="0,141,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="名前"  DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="電話番号"  DisplayMemberBinding="{Binding Phone}" Width="200" />
                    <GridViewColumn Header="住所"  DisplayMemberBinding="{Binding Address}" Width="400" />
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock HorizontalAlignment="Left" Margin="0,-10,0,0" TextWrapping="Wrap" Text="名前" VerticalAlignment="Top" Width="133" Height="33" Grid.RowSpan="2" FontSize="25"/>
        <TextBlock Margin="251,-10,419,0" TextWrapping="Wrap" Text="電話番号" VerticalAlignment="Top" Height="33" FontSize="25"/>
        <TextBlock Margin="567,-10,138,0" TextWrapping="Wrap" Text="住所" VerticalAlignment="Top" Height="33" FontSize="25"/>
        <Image HorizontalAlignment="Left" Height="153" Margin="395,15,0,0" Grid.Row="1" VerticalAlignment="Top" Width="306" Grid.RowSpan="3"/>
        <Button Content="画像" x:Name="imageTextBox" FontSize="25" Click="Image_Click" RenderTransformOrigin="0.609,0.51" Margin="715,20,10,223" Grid.Row="1" Grid.RowSpan="3" />
    </Grid>
</Window>
